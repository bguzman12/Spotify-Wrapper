<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/time_wrapped_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TimeWrapped">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/time_wrapped_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Generate wrapped from..." />

        <Button
            android:id="@+id/past_month_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Past Month" />

        <Button
            android:id="@+id/past_6_month_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Past 6 Months" />

        <Button
            android:id="@+id/past_year_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Past Year" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
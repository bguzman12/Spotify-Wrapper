<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyAccount">
    <!--TODO this title could be similar to spotify account screen, with username and pic?-->


    <Button
        android:id="@+id/button_new_wrapped"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="148dp"
        android:onClick="viewPostsClicked"
        android:text="See Posts"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/button_account"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="260dp"
        android:onClick="editLoginClicked"
        android:text="Edit Account Info"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="466dp"
        android:layout_height="260dp"
        android:src="@drawable/new_spotify_logo"
        app:layout_constraintBottom_toTopOf="@+id/button_new_wrapped"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="51dp"
        android:layout_height="52dp"
        android:layout_marginBottom="52dp"
        android:background="@drawable/round"
        android:backgroundTint="@color/green"
        android:foregroundTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttons_container"
        app:layout_constraintVertical_bias="0.791"
        app:srcCompat="?android:attr/listChoiceIndicatorSingle" />
</androidx.constraintlayout.widget.ConstraintLayout>